# Server Configuration
PORT=2020
API_PREFIX=api

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_NAME=tainiex_core

# Authentication (JWT)
# 15 minutes expiration for access tokens (openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key
# 7 days expiration for refresh tokens (openssl rand -base64 32)
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key

# Google Cloud Vertex AI
VERTEX_PROJECT_ID=your-gcp-project-id
VERTEX_LOCATION=us-central1

# Google Application Credentials
# Path to the JSON key file for local development. 
# In Cloud Run, this is handled automatically via Service Account identity if configured.
GOOGLE_APPLICATION_CREDENTIALS=./gcp-sa-key.json
