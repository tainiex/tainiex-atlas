# Server Configuration
PORT=2020
API_PREFIX=api
NODE_ENV=development  # production | development
LOG_LEVEL=info        # debug | info | warn | error (Only for custom LoggerService, NestJS logger is controlled by NODE_ENV)


# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_NAME=tainiex_core

# Authentication (JWT)
# 15 minutes expiration for access tokens (openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key
# 7 days expiration for refresh tokens (openssl rand -base64 32)
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key

# Microsoft Auth
AZURE_CLIENT_ID=your_azure_client_id

# Google Cloud Vertex AI
VERTEX_PROJECT_ID=your-gcp-project-id
VERTEX_LOCATION=us-central1
# Specific model for Memory Distillation / Backfill
MEMORY_DISTILLATION_MODEL=gemini-2.0-flash-001

# Embedding Model
VERTEX_EMBEDDING_MODEL=text-embedding-004

# Google Application Credentials
# Path to the JSON key file for local development. 
# In Cloud Run, this is handled automatically via Service Account identity if configured.
GOOGLE_APPLICATION_CREDENTIALS=./gcp-sa-key.json

# Memory Distillation Configuration
# DISTILL_THRESHOLD: Number of messages before triggering real-time distillation (default: 20)
# DISTILL_BACKFILL_CHUNK_SIZE: Number of messages to process per backfill chunk (default: 30)

# Google Auth
GOOGLE_CLIENT_ID=your_web_client_id
GOOGLE_CLIENT_SECRET=your_web_client_secret
GOOGLE_REDIRECT_URI=postmessage
GOOGLE_ANDROID_CLIENT_ID=your_android_client_id
GOOGLE_IOS_CLIENT_ID=your_ios_client_id

# GCS Configuration (for avatars, uploads)
GCS_BUCKET_NAME=your-gcs-bucket-name
GSA_KEY_FILE= # Optional path to service account key if different from GOOGLE_APPLICATION_CREDENTIALS

# Mistral AI Configuration
MISTRAL_API_KEY=your_mistral_api_key_here

# API Tools Configuration
# Get key from: https://openweathermap.org
OPENWEATHER_API_KEY=your_openweather_api_key
# Get key from: https://tavily.com (Free tier available)
TAVILY_API_KEY=your_tavily_api_key
# Get key from: https://www.alphavantage.co/support/#api-key
ALPHAVANTAGE_API_KEY=your_alphavantage_api_key

# OpenRouter
OPENROUTER_API_KEY=

ZAI_API_KEY=
